{
  "version": 2,
  "buildCommand": "cd ../shared && pnpm install && pnpm run build && cd ../mcp-server && pnpm install && tsc && tsc-alias",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
