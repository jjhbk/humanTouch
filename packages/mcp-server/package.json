{
  "name": "@humanlayer/mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "humanlayer-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index-http.ts",
    "build": "pnpm run build:shared && tsc && tsc-alias",
    "build:shared": "cd ../shared && pnpm run build",
    "start": "node dist/index-http.js",
    "start:stdio": "node dist/index.js",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@humanlayer/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  }
}
